<template>
  <div class="panel">
    <div class="left">
      <p><span class="point"></span>更新时间</p>
      <p>{{updateTime}}</p>
    </div>
    <div class="bg"><img src="../assets/img/indexBg.png"></div>
    <div class="right" @click="reloadPage()">
      <i class="iconfont icon-refresh"></i>
    </div>
  </div>
</template>
<script>
import { mapState } from 'vuex'
import PublicMethods from '@/utils/PublicMethods'
export default {
  name: 'Panel',
  mounted() {
    this.$nextTick(() => {
      this.loadPage();
    })
  },
  methods: {
    loadPage() {
      if (this.updateTime == '') {
        this.$store.commit('updateTime', PublicMethods.getCurTime())
      }
    },
    reloadPage() {
      location.reload();
    }
  },
  computed: {
    ...mapState({
      updateTime: state => state.updateTime,
    }),
  }
}

</script>
